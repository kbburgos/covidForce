<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.cedula %>" method="POST">
          <div class="form-group">
            <input
              type="text"
              name="name"
              value="<%= data.email%>"
              placeholder="Name"
              class="form-control"
              autofocus
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="address"
              value="<%= data.nombre%>"
              placeholder="Address"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="phone"
              value="<%= data.apellido%>"
              placeholder="Phone"
              class="form-control"
            />
          </div>

          <div class="form-group">
            <input
              type="text"
              name="name"
              value="<%= data.fecha_nacimiento%>"
              placeholder="Name"
              class="form-control"
              autofocus
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="address"
              value="<%= data.contrasena%>"
              placeholder="Address"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="phone"
              value="<%= data.direccion%>"
              placeholder="Phone"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              name="phone"
              value="<%= data.id_semaforo%>"
              placeholder="Phone"
              class="form-control"
            />
          </div>

          <button type="submit" class="btn btn-primary">save marker</button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
