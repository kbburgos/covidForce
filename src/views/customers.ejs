<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>id</td>
            <td>cedula</td>
            <td>email</td>
            <td>nombre</td>
            <td>apellido</td>
            <td>fecha_nacimiento</td>
            <td>contrasena</td>
            <td>direccion</td>
            <td>id_semaforo</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %> <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].cedula %></td>
            <td><%= data[i].email %></td>
            <td><%= data[i].nombre %></td>
            <td><%= data[i].apellido %></td>
            <td><%= data[i].fecha_nacimiento %></td>
            <td><%= data[i].contrasena %></td>
            <td><%= data[i].direccion %></td>
            <td><%= data[i].id_semaforo %></td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="cedula"
                placeholder="cedula"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="email"
                placeholder="email"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="nombre"
                placeholder="nombre"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="apellido"
                placeholder="apellido"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="fecha_nacimiento"
                placeholder="fecha_nacimiento"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="contrasena"
                placeholder="contrasena"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="direccion"
                placeholder="direccion"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="id_semaforo"
                placeholder="id_semaforo"
                class="form-control"
                autofocus
              />
            </div>

            <button type="submit" class="btn btn-primary">save customer</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
